<form method="POST">
  <div class="form-group">
    <label for="name">Username:</label>
    <input type="text" name="user[name]" id="name" class="form-control">
  </div>
  <div class="form-group">
    <label for="email">Email:</label>
    <input type="text" name="user[email]" id="email" class="form-control">
  </div>
  <div class="form-group">
    <label for="password">Password:</label>
    <input type="password" name="user[password]" id="password" class="form-control">
  </div>
  <input type="submit" value="Create Account" id="signup" class="btn btn-primary">
</form>
