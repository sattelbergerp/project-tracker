<form action="/projects/<%=@project.id%>" method="POST">
  <input type="hidden" name="_method" value="PATCH">
  <div class="form-group">
    <label for="name">Name:</label>
    <input type="text" name="project[name]" id ="name" value="<%=@project.name%>" class="form-control">
  </div>
  <div class="form-group">
    <label for="description">Description:</label>
    <textarea type="text" name="project[description]" id ="description" class="form-control" rows="8"><%=@project.description%></textarea>
  </div>
  <input type="submit" id="update-project" value="Update Project" class="btn btn-primary">
  <a href="/projects/<%=@project.id%>" class="btn btn-default">Cancel</a>
<form>
