<head>
  <meta charset="utf-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge, chrome=1" />

  <title>Project Tracker</title>

  <meta name="viewport" content="width=device-width, initial-scale=1.0" />

  <link rel="stylesheet" href="/stylesheets/main.css" />
  <link href="/stylesheets/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <nav class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <a class="navbar-brand" href="/">Project Tracker</a>
      </div>
      <div id="navbar" class="collapse navbar-collapse">
        <ul class="nav navbar-nav">
          <%if logged_in?%>
            <li class="<%='active' if @request.path=='/projects'%>"    ><a href="/projects">Projects</a></li>
            <li class="<%='active' if @request.path=='/tasks'%>"       ><a href=" /tasks" >Tasks</a></li>
            <li class="<%='active' if @request.path=='/projects/new'%>"><a href="/projects/new">New Project</a></li>
            <li class="<%='active' if @request.path=='/tasks/new'%>"   ><a href="/tasks/new">New Task</a></li>

          <% else %>
          <li class="<%='active' if @request.path=='/login'%>"    ><a href="/login">Login</a></li>
          <li class="<%='active' if @request.path=='/signup'%>"       ><a href=" /signup" >Signup</a></li>
          <% end %>
        </ul>
        <ul class="nav navbar-nav navbar-right">
          <%if logged_in?%>
            <li><a href="/logout">Logout <%=current_user.name%></a></li>
          <% end %>
        </ul>
      </div><!--/.nav-collapse -->
    </div>
  </nav>

  <div class="wrapper">

      <%= yield %>

    <footer class="branding">
      <small>&copy; 2017 <strong>Patrick Sattelberger</strong></small>
    </footer>
  </div>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
    <script src="javascripts/bootstrap.min.js"></script>
</body>
